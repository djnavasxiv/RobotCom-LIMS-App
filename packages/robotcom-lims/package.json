{
  "name": "robotcom-lims",
  "version": "1.0.0",
  "description": "Modern LIMS Desktop Application",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "npm run prisma:generate && electron-vite dev",
    "dev:headless": "npm run prisma:generate && DISPLAY='' ELECTRON_OZONE_PLATFORM_HINT=x11 electron-vite dev",
    "prebuild": "npm run prisma:generate",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "npm run prisma:generate && electron-builder",
    "package:win": "npm run prisma:generate && electron-builder --win",
    "prisma:generate": "prisma generate && node -e \"const fs = require('fs'); const path = require('path'); const src = 'src/generated/prisma-client'; const dst = '../../node_modules/.prisma/client'; if(fs.existsSync(src)) { fs.mkdirSync(dst, {recursive: true}); fs.cpSync(src, dst, {recursive: true, force: true}); console.log('âœ… Prisma client synced'); }\"",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node prisma/seed.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@prisma/client": "^6.19.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.6.2",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "node-machine-id": "^1.1.12",
    "nodemailer": "^7.0.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "react-router-dom": "^6.20.1",
    "recharts": "^3.4.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prisma": "^5.7.0",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.robotcom.lims",
    "productName": "RobotComLab",
    "asar": false,
    "publish": [
      {
        "provider": "generic",
        "url": "https://your-update-server.com"
      }
    ],
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "asarUnpack": [
      "node_modules/@prisma/**/*",
      "node_modules/.prisma/**/*",
      "node_modules/bcrypt/**/*",
      "src/generated/**/*"
    ],
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "src/generated/**/*",
      "prisma/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RobotComLab",
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "language": "1033",
      "differentialPackage": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "bcrypt",
      "prisma"
    ]
  }
}